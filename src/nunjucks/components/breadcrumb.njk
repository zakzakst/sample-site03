{% macro default(ITEMS) %}
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      {% for ITEM in ITEMS %}
        {% if ITEM.current %}
          <li class="is-active"><a href="{{ ITEM.link }}">{{ ITEM.name }}</a></li>
        {% else %}
          <li><a href="{{ ITEM.link }}">{{ ITEM.name }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>
{% endmacro %}