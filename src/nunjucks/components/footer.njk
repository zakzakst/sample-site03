          {% endfor %}
        </ul>
        <dl class="footer__content-table">
          {% for ITEM in TABLE_ITEMS %}
            <dt>{{ ITEM.term }}</dt>
            <dd>{{ ITEM.definition }}</dd>
          {% endfor %}
        </dl>
      </div>
    </div>
  </div>
  <div class="footer__bottom">
    <div class="container">
      <ul class="footer__nav-items">
        {% for ITEM in NAV_ITEMS %}
          <li class="footer__nav-item">
            <a href="{{ ITEM.link }}">{{ ITEM.label }}</a>
