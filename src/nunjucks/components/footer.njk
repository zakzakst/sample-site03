      <div class="footer__content-info">
        <ul class="footer__content-sns">
          {% for ITEM in SNS_ITEMS %}
            <li>
              <a href="{{ ITEM.href }}" class="footer__content-sns-link">
                <i class="{{ ITEM.icon }}"></i>
